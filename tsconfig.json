{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es5", "es2015.collection", "es2015.iterable", "es2015.promise"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es3",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "pretty": true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/index.ts"
    ]
}
